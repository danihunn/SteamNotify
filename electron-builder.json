{
    "appId": "com.dani.steamnotify",
    "files": [
        "src/**/*",
        "!**/.env",
        "./img",
        "!userData"
    ],
    "icon": "./img/desktopIcon.png", 

    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target":"AppImage",
        "category": "Utility"
    },
    "win": {
        "target": ["portable", "msi"]
    }
}